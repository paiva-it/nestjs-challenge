{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "..",
  "testRegex": ".e2e-spec.ts$",
  "testEnvironment": "node",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@api/(.*)$": "<rootDir>/src/api/$1",
    "^@configuration/(.*)$": "<rootDir>/src/configuration/$1",
    "^@test/(.*)$": "<rootDir>/test/$1"
  }
}
